# Shortcuts
alias copyssh="pbcopy < $HOME/.ssh/id_ed25519.pub"
alias reloadshell="source $HOME/.zshrc"
alias reloaddns="dscacheutil -flushcache && sudo killall -HUP mDNSResponder"
alias c="clear"

# Directories
alias dev="cd $HOME/Developments"
alias dotfiles="cd $HOME/.dotfiles"
alias github="cd $HOME/GitHub"
alias sites="cd $HOME/Sites"

# List all files colorized in long format
alias l="ls -laF"

# PHP
alias cfresh="rm -rf vendor/ composer.lock && composer i"
alias composer="php -d memory_limit=-1 /usr/local/bin/composer"
alias switch-php74="brew unlink php && brew link --overwrite --force php@7.4"
alias switch-php80="brew unlink php@7.4 && brew link --overwrite --force php"

alias sc="php spark serve"
alias sl="php artisan serve"
alias fresh="php artisan migrate:fresh --seed"
alias seed="php artisan db:seed"

# JS
alias check="yarn upgrade-interactive --latest"
alias nfresh="rm -rf node_modules/ package-lock.json && yarn"
alias watch="npm run watch"

# Git
alias commit="git add . && git commit -m"
alias gb="git branch"
alias gc="git checkout"
alias gl="git log --oneline --decorate --color"
alias gst="git status"
alias force="git push --force"
alias nuke="git clean -df && git reset --hard"
alias pull="git pull"
alias push="git push"
alias stash="git stash -u"
alias unstage="git restore --staged ."
